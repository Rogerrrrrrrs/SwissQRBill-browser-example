{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "lib": ["ES6", "DOM"],
    "module": "CommonJS",
    "sourceMap": true,
    "declaration": true,
    "outDir": "/lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}